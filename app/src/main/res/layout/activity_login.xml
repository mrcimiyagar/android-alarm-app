<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="kasper_external_apps.android.alarmer.front.activities.LoginActivity">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:alpha="1">

        <TextView
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="64dp"
            android:background="@drawable/logo_background"
            android:elevation="4dp"
            android:text="لوگو"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="@color/colorPrimaryDark"/>

        <LinearLayout
            android:id="@+id/activity_login_container_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:alpha="0">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:hint="رمز عبور"
                android:textColorHint="#FFF"
                app:hintTextAppearance="@style/AppTheme.FloatingHint">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/activity_login_password_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:textSize="18sp"
                    android:textColorHint="#FFF"
                    android:backgroundTint="#FFF"
                    android:inputType="textPassword"
                    android:textColor="#FFF"/>

            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_width="112dp"
                android:layout_height="56dp"
                android:text="ورود"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="80dp"
                android:background="@drawable/login_button_background"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:onClick="onLoginBtnClicked"/>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>

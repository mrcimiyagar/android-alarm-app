<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/adapter_alarm_header_alarms_details1_image_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"/>

            <TextView
                android:id="@+id/adapter_alarm_header_alarms_details1_text_view"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="12 یادآور در وضعیت انتظار"
                android:gravity="center_vertical"
                android:layout_marginRight="56dp"
                android:textSize="16sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/adapter_alarm_header_alarms_details2_image_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"/>

            <TextView
                android:id="@+id/adapter_alarm_header_alarms_details2_text_view"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="یادآور بعدی : 30 مهر 1396 ساعت 11:30"
                android:gravity="center_vertical"
                android:layout_marginRight="56dp"
                android:textSize="16sp"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>